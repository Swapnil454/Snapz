<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('./partials/head') %>
    <title>blog Page</title>
</head>
<body>
    <%- include('./partials/nav') %> 
        <div class="container mt-4">
            <h1><%= blog.title %></h1>
            <img src="<%= blog.coverImageURL %>" width="700px"/>
            <pre class="mt-3"><%= blog.body %></pre> 
            <% if (user && user._id.toString() === blog.createdBy._id.toString()) { %>
    <form action="/blog/<%= blog._id %>/delete" method="POST" onsubmit="return confirm('Are you sure?')">
        <button type="submit" class="btn btn-danger ">Delete Post</button>
    </form>
<% } %>
            
        </div> 
        <% if (blog.createdBy) { %>
  <div class="container mt-4">
      <img src="<%= blog.createdBy.profileImageURL %>" width="50px" />
      <%= blog.createdBy.fullName %>
  </div>
<% } else { %>
  <div class="container mt-4">
      <p><em>Author details not available.</em></p>
  </div>
<% } %>


    <div class="container mt-3">
        <h1>Comments (<%= comments.length %>)</h1>
        <% if (locals.user) { %>
         <form action="/blog/comment/<%= blog._id %>" method="post">
            <div class="mb-3">
                <input 
                type="text" 
                name="content" 
                class="form-control" 
                placeholder="Enter your comments"
                />
                <button type="submit" class="btn btn-primary mt-1">Add</button>
            </div>
        </form>
        
        <% } %>
        <div class="mt-3">
            <% comments.forEach(comment => { %>
             <div>
                <img src="<%= comment.createdBy.profileImageURL %>" width="50px" />
      <%= comment.createdBy.fullName %>
      <pre class="mt-1"><%= comment.content %></pre>
             </div>
            <% }) %>
        </div>
    </div>
    


    

    <%- include('./partials/script') %>

</body>
</html>